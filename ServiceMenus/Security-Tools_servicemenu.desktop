[Desktop Entry]
Type=Service
ServiceTypes=KonqPopupMenu/Plugin
MimeType=all/allfiles;
Icon=document-encrypt
Actions=sendto-mailx;_SEPARATOR_;Encrypt;Decrypt;_SEPARATOR_;shredder;
X-KDE-Submenu=Security Tools
X-KDE-Submenu[en_US]=Security Tools
X-KDE-Submenu[es]=Herramientas de Seguridad
X-KDE-Submenu[x-test]=xxSecurity Toolsxx
X-KDE-StartupNotify=false
X-KDE-Priority=TopLevel

[Desktop Action sendto-mailx]
Name=Secure Send To Mailx
Name[en_US]=Secure Send To Mailx
Name[es]=EnvÃ­o seguro a Mailx
Name[x-test]=xxSecure Send To Mailxxx
Icon=internet-mail
Exec=zip -9reP $(kdialog --icon=internet-mail --caption="Secure Send To Mailx" --password="Enter password for encrypt:") %u.zip %u; mailx -s "$(kdialog --icon=internet-mail --caption="Secure Send To Mailx" --inputbox="Message Subject:")" -a $(kdialog --icon=internet-mail --caption="Secure Send To Mailx" --textinputbox="Message Body:" > /tmp/mailbody) /tmp/mailbody -a %u.zip $(kdialog --icon=internet-mail --caption="Secure Send To Mailx" --inputbox="Mail To:	(For send to multiples mailbox enter comma separated list of address)") <.; rm -f %u.zip /tmp/mailbody; kdialog --icon=internet-mail --title="Secure Send To Mailx" --passivepopup="[Finished]"

[Desktop Action Encrypt]
Name=Encrypt
Name[en_US]=Encrypt
Name[es]=Encriptar
Name[x-test]=xxEncryptxx
Icon=document-encrypt
Exec=gpg --yes -c --passphrase "$(kdialog --caption="File Encryption" --password="Enter passphrase for encrypt")" %u && if [ "$?" = "0" ]; then kdialog --icon=document-encrypt --title="File Encryption" --passivepopup="[Finished]"; fi

[Desktop Action Decrypt]
Name=Decrypt
Name[en_US]=Decrypt
Name[es]=Desencriptar
Name[x-test]=xxDecryptxx
Icon=document-decrypt
Exec=gpg --yes --passphrase "$(kdialog --caption="File Decryption" --password="Enter passphrase for decrypt")" %u && if [ "$?" = "0" ]; then kdialog --icon=document-decrypt --title="File Decryption" --passivepopup="[Finished]"; fi

[Desktop Action shredder]
Name=Paranoid Shredder
Name[en_US]=Paranoid Shredder
Name[es]=Trituradora Paranoica
Name[x-test]=xxParanoid Shredderxx
Icon=edit-delete-shred
Exec=/usr/share/applications/Dolphin_Tools-name-whitespace-replace.sh %u; echo '%u' >> .shred; for i in $(cat .shred);do shred -f -n 5 --random-source=/dev/urandom -z "$i";done; for i in $(cat .shred);do mv -f "$i" $(stat "$i"|grep Modify|awk '{print $2$3}'|sed 's/[-:.]//g').shredder;done; rm -f *.shredder; shred -f -n 5 --random-source=/dev/urandom -z -u .shred
